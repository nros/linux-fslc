#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	aliases {
		mxcfb0 = &mxcfb1;
		mxcfb1 = &mxcfb2;
		mxcfb2 = &mxcfb3;
		mxcfb3 = &mxcfb4;
	};

	chosen {
		stdout-path = &uart1;
	};

	memory: memory {
		reg = <0x10000000 0x40000000>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_usb_h1_vbus: regulator@1 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "usb_h1_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_usbhub_reset>;
			gpio = <&gpio3 12 0>;
			enable-active-high;
			startup-delay-us = <2000>;
			status = "okay";
		};

		reg_3v3: regulator@2 {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};

	mxcfb1: fb@0 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "ldb";
		interface_pix_fmt = "RGB24";
		default_bpp = <32>;
		int_clk = <0>;
		late_init = <0>;
		status = "okay";
	};

	mxcfb2: fb@1 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "hdmi";
		interface_pix_fmt = "RGB24";
		mode_str ="1920x1080M@60";
		default_bpp = <32>;
		int_clk = <0>;
		late_init = <0>;
		status = "okay";
	};

	mxcfb3: fb@2 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "lcd";
		interface_pix_fmt = "RGB565";
		mode_str ="CLAA-WVGA";
		default_bpp = <16>;
		int_clk = <0>;
		late_init = <0>;
		status = "disabled";
	};

	mxcfb4: fb@3 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "ldb";
		interface_pix_fmt = "RGB666";
		default_bpp = <16>;
		int_clk = <0>;
		late_init = <0>;
		status = "disabled";
	};

	lcd@0 {
		compatible = "fsl,lcd";
		ipu_id = <0>;
		disp_id = <0>;
		default_ifmt = "RGB565";
		status = "disabled";
	};

	backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 5000000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		pinctrl-0 = <&pinctrl_bkl_on>;
		enable-gpios = <&gpio3 13 0>;
		status = "okay";
	};

	pwm-leds {
		compatible = "pwm-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_status_led_pwms>;

		red {
			label = "blix:status:red";
			pwms = <&pwm2 0 50000>;
			max-brightness = <255>;
			active-low;
		};

		green {
			label = "blix:status:green";
			pwms = <&pwm3 0 50000>;
			max-brightness = <255>;
			active-low;
		};

		blue {
			label = "blix:status:blue";
			pwms = <&pwm4 0 50000>;
			max-brightness = <255>;
			active-low;
		};

	};

	rotary0 {
		compatible = "rotary-encoder";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_rotary>;
		gpios = <&gpio5 30 0>, <&gpio5 31 0>;
		/* linux,axis = <1>;*/ /* REL_Y */
		/* rotary-encoder,relative-axis; */
		rotary-encoder,noaxis;
		rotary-encoder,codeCCW = <108>; /* UP */
		rotary-encoder,codeCW = <103>; /* DOWN */
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_keys>;

		rotary_button {
			label = "rotary_button";
			gpios = <&gpio6 0 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <28>; /* KEY_ENTER */
		};

		home_button {
			label = "home_button";
			gpios = <&gpio4 15 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <102>; /* KEY_HOME */
		};

		menu_button {
			label = "menu_button";
			gpios = <&gpio4 7 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <127>; /* KEY_COMPOSE */
		};

		esc_button {
			label = "esc_button";
			gpios = <&gpio4 8 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <1>; /* KEY_ESC */
		};

	};

	hannstar_cabc {
		compatible = "hannstar,cabc";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_cabc>;
		lvds0 {
			gpios = <&gpio6 15 GPIO_ACTIVE_HIGH>;
		};
	};

	sound {
		compatible = "fsl,imx6q-sabrelite-sgtl5000",
			     "fsl,imx-audio-sgtl5000";
		model = "imx6q-crix-arx-sgtl5000";
		ssi-controller = <&ssi2>;
		audio-codec = <&codec>;
		audio-routing =
			"Ext Spk", "LINE_OUT";
		mux-int-port = <2>;
		mux-ext-port = <3>;
	};

	sound-hdmi {
		compatible = "fsl,imx6q-audio-hdmi",
		"fsl,imx-audio-hdmi";
		model = "imx-audio-hdmi";
		hdmi-controller = <&hdmi_audio>;
	};

};

&audmux {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_audmux>;
	status = "okay";
};

&clks {
	fsl,ldb-di0-parent = <&clks IMX6QDL_CLK_PLL2_PFD0_352M>;
	fsl,ldb-di1-parent = <&clks IMX6QDL_CLK_PLL2_PFD0_352M>;
};

&ecspi3 {
	fsl,spi-num-chipselects = <2>;
	cs-gpios = <&gpio4 24 0>, <&gpio4 25 0>;
	pinctrl-0 = <&pinctrl_ecspi3>;
	status = "okay";
};

&fec {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_enet>;
	phy-mode = "rmii";
	fsl,magic-packet;
	status = "okay";
	phy-handle = <&ethphy>;
	phy-reset-gpios = <&gpio3 22 GPIO_ACTIVE_LOW>;
	phy-reset-duration = <30>;
	mdio {
		#address-cells = <1>;
		#size-cells = <0>;

		ethphy: ethernet-phy@1 {
			compatible = "ethernet-phy-id0007.C0F1 , ethernet-phy-ieee802.3-c22";
			smsc,disable-energy-detect;
			reg = <1>;
			max-speed = <100>;
		};
	};
};

&gpc {
	fsl,ldo-bypass = <0>;
};

&i2c1 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c1>;
	status = "okay";

        rtc_i2c: rtc@68 {
                compatible = "st,m41t83";
                reg = <0x68>;
		interrupt-parent = <&gpio2>;
		interrupts = <21 IRQ_TYPE_LEVEL_LOW>;
        };

        eeprom_i2c: at24@52 {
                compatible = "at24,24c256";
                pagesize = <32>;
                reg = <0x52>;
        };

	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&clks 201>;
		VDDD-supply = <&reg_3v3>;
		VDDA-supply = <&reg_3v3>;
		VDDIO-supply = <&reg_3v3>;
	};
};

&i2c2 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";

	touch_controller: ar1021@4d {
		compatible = "microchip,ar1021-i2c";
		reg = <0x4d>;
		interrupts = <8 IRQ_TYPE_LEVEL_HIGH>;
		interrupt-parent = <&gpio6>;
	};

	hdmi: edid@50 {
		compatible = "fsl,imx6-hdmi-i2c";
		reg = <0x50>;
	};
};

&i2c3 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c3>;
	status = "okay";
};

&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_extra &pinctrl_config>;

		blix {
			pinctrl_extra: extragrp {
				fsl,pins = <
					MX6QDL_PAD_EIM_D26__GPIO3_IO26		0x130b0 /* RESET_OUT_GPIO */
					MX6QDL_PAD_NANDF_WP_B__GPIO6_IO09	0x130b0 /* WDOG_RESET_IN */
					MX6QDL_PAD_NANDF_RB0__GPIO6_IO10	0x130b0 /* WDOG_RESET_OUT */
				>;
			};
		};

		config {
			pinctrl_config: configgrp {
				fsl,pins = <
					MX6QDL_PAD_EIM_DA3__GPIO3_IO03		0x130b0 /* config_0 */
					MX6QDL_PAD_EIM_DA6__GPIO3_IO06		0x130b0 /* config_1 */
					MX6QDL_PAD_EIM_DA8__GPIO3_IO08		0x130b0 /* config_2 */
				>;
			};
		};

		enet {
			pinctrl_enet: enetgrp {
				fsl,pins = <
					MX6QDL_PAD_ENET_MDIO__ENET_MDIO		0x1b0b0
					MX6QDL_PAD_ENET_MDC__ENET_MDC		0x1b0b0
					MX6QDL_PAD_ENET_RX_ER__ENET_RX_ER	0x1b0b0
					MX6QDL_PAD_ENET_TX_EN__ENET_TX_EN	0x1b0b0
					MX6QDL_PAD_ENET_RXD0__ENET_RX_DATA0	0x1b0b0
					MX6QDL_PAD_ENET_RXD1__ENET_RX_DATA1	0x1b0b0
					MX6QDL_PAD_ENET_TXD0__ENET_TX_DATA0	0x1b0b0
					MX6QDL_PAD_ENET_TXD1__ENET_TX_DATA1	0x1b0b0
					MX6QDL_PAD_GPIO_16__ENET_REF_CLK	0x4001b0a8
					MX6QDL_PAD_ENET_CRS_DV__ENET_RX_EN	0x1b0b0
					MX6QDL_PAD_EIM_D22__GPIO3_IO22		0x1b0b0 /* LAN8720 nRST */
					MX6QDL_PAD_EIM_DA7__GPIO3_IO07		0x1b0b0 /* LAN8720 nINT - not used at the moment */
				>;
			};
		};

		bkl {
			pinctrl_bkl_on: gpio_bkl_on {
				fsl,pins = <
					MX6QDL_PAD_GPIO_17__GPIO7_IO12		0x130b0 /* PD */
				>;
			};
		};

		pwm234 {
			pinctrl_status_led_pwms: rgbpwmgrp {
				fsl,pins = <
					MX6QDL_PAD_SD1_DAT2__PWM2_OUT		0x1b0b0
					MX6QDL_PAD_SD1_DAT1__PWM3_OUT		0x1b0b0
					MX6QDL_PAD_SD1_CMD__PWM4_OUT		0x1b0b0
				>;
			};
		};

		i2c1 {
			pinctrl_i2c1: i2c1grp {
				fsl,pins = <
					MX6QDL_PAD_CSI0_DAT8__I2C1_SDA		0x4001b8b1
					MX6QDL_PAD_CSI0_DAT9__I2C1_SCL		0x4001b8b1
					MX6QDL_PAD_EIM_A17__GPIO2_IO21		0x1b0b0 /* RTC_ALARM_IRQ */
				>;
			};
		};

		i2c2 {
			pinctrl_i2c2: i2c2grp {
				fsl,pins = <
					MX6QDL_PAD_KEY_ROW3__I2C2_SDA		0x4001b8b1
					MX6QDL_PAD_KEY_COL3__I2C2_SCL		0x4001b8b1
					MX6QDL_PAD_NANDF_CLE__GPIO6_IO07	0x130b0 /* AR1021_INT */
					MX6QDL_PAD_EIM_D28__GPIO3_IO28		0x130b0 /* I2C2_1_INT1 */
					MX6QDL_PAD_EIM_D29__GPIO3_IO29		0x130b0 /* I2C2_1_INT2 */
					MX6QDL_PAD_EIM_D30__GPIO3_IO30		0x130b0 /* I2C2_2_INT1 */
					MX6QDL_PAD_EIM_D31__GPIO3_IO31		0x130b0 /* I2C2_2_INT2 */
				>;
			};
		};

		i2c3 {
			pinctrl_i2c3: i2c3grp {
				fsl,pins = <
					MX6QDL_PAD_EIM_D17__I2C3_SCL		0x4001b8b1
					MX6QDL_PAD_EIM_D18__I2C3_SDA		0x4001b8b1
				>;
			};
		};

		spi3 {
			pinctrl_ecspi3: spi3grp {
				fsl,pins = <
					MX6QDL_PAD_DISP0_DAT0__ECSPI3_SCLK	0x100b1
					MX6QDL_PAD_DISP0_DAT1__ECSPI3_MOSI	0x100b1
					MX6QDL_PAD_DISP0_DAT2__ECSPI3_MISO	0x100b1
					MX6QDL_PAD_DISP0_DAT3__GPIO4_IO24	0x1b0b0
					MX6QDL_PAD_DISP0_DAT4__GPIO4_IO25	0x1b0b0
					MX6QDL_PAD_DISP0_DAT5__GPIO4_IO26	0x130b0
					MX6QDL_PAD_DISP0_DAT6__GPIO4_IO27	0x130b0
					MX6QDL_PAD_DISP0_DAT7__GPIO4_IO28	0x130b0
					MX6QDL_PAD_DISP0_DAT8__GPIO4_IO29	0x130b0
					MX6QDL_PAD_DISP0_DAT9__GPIO4_IO30	0x130b0
					MX6QDL_PAD_DISP0_DAT10__GPIO4_IO31	0x130b0
					MX6QDL_PAD_DISP0_DAT11__GPIO5_IO05	0x130b0
					MX6QDL_PAD_DISP0_DAT12__GPIO5_IO06	0x130b0
				>;
			};
		};

		sound {
			pinctrl_audmux: audmuxgrp {
				fsl,pins = <
					MX6QDL_PAD_CSI0_DAT4__AUD3_TXC		0x130b0
					MX6QDL_PAD_CSI0_DAT5__AUD3_TXD		0x110b0
					MX6QDL_PAD_CSI0_DAT6__AUD3_TXFS		0x130b0
					MX6QDL_PAD_CSI0_DAT7__AUD3_RXD		0x130b0
					/* SGTL5000 sys_mclk */
					MX6QDL_PAD_GPIO_0__CCM_CLKO1		0x03088
				>;
			};
		};

		pwm1 {
			pinctrl_pwm1: pwm1grp {
				fsl,pins = <
					MX6QDL_PAD_GPIO_9__PWM1_OUT		0x1b0b1
				>;
			};
		};

		uart1 {
			pinctrl_uart1: uart1grp {
				fsl,pins = <
					MX6QDL_PAD_CSI0_DAT10__UART1_TX_DATA	0x1b0b1
					MX6QDL_PAD_CSI0_DAT11__UART1_RX_DATA	0x1b0b1
					MX6QDL_PAD_EIM_D19__UART1_CTS_B		0x1b0b1
					MX6QDL_PAD_EIM_D20__UART1_RTS_B		0x1b0b1
					MX6QDL_PAD_EIM_D23__UART1_DCD_B		0x1b0b1
					MX6QDL_PAD_EIM_D24__UART1_DTR_B		0x1b0b1
					MX6QDL_PAD_EIM_D25__UART1_DSR_B		0x1b0b1
				>;
			};
		};

		uart2 {
			pinctrl_uart2: uart2grp {
				fsl,pins = <
					MX6QDL_PAD_SD3_DAT4__UART2_RX_DATA	0x1b0b1
					MX6QDL_PAD_SD3_DAT5__UART2_TX_DATA	0x1b0b1
					MX6QDL_PAD_SD3_CMD__UART2_CTS_B		0x1b0b1
					MX6QDL_PAD_SD3_CLK__UART2_RTS_B		0x1b0b1
				>;
			};
		};

		usbotg {
			pinctrl_usbotg: usbotggrp {
			fsl,pins = <
					MX6QDL_PAD_GPIO_1__USB_OTG_ID		0x17059
				>;
			};
		};

		usbreset {
			pinctrl_usbhub_reset: usbhub_reset {
				fsl,pins = <
					MX6QDL_PAD_EIM_DA12__GPIO3_IO12		0x130b0
				>;
			};
		};

		rotary {
			pinctrl_rotary: rotarygrp {
				fsl,pins = <
					MX6QDL_PAD_CSI0_DAT12__GPIO5_IO30	0x1b0b0
					MX6QDL_PAD_CSI0_DAT13__GPIO5_IO31	0x1b0b0
				>;
			};
		};

		keys {
			pinctrl_gpio_keys: frontkeygrp {
				fsl,pins = <
					MX6QDL_PAD_CSI0_DAT14__GPIO6_IO00	0x1b0b0 /* rotary enter button */
					MX6QDL_PAD_KEY_ROW0__GPIO4_IO07		0x1b0b0 /* menu key */
					MX6QDL_PAD_KEY_COL1__GPIO4_IO08		0x1b0b0 /* esc key */
					MX6QDL_PAD_KEY_ROW4__GPIO4_IO15		0x1b0b0 /* home key */
					MX6QDL_PAD_KEY_ROW1__GPIO4_IO09		0x130b0 /* key reference out */
				>;
			};
		};

		cabc {
			pinctrl_cabc: cabcgrp {
				fsl,pins = <
					MX6QDL_PAD_NANDF_CS2__GPIO6_IO15	0x130b0
				>;
			};
		};

		usdhc2 {
			pinctrl_usdhc2: usdhc2grp {
				fsl,pins = <
					MX6QDL_PAD_SD2_CMD__SD2_CMD		0x17059
					MX6QDL_PAD_SD2_CLK__SD2_CLK		0x10059
					MX6QDL_PAD_SD2_DAT0__SD2_DATA0		0x17059
					MX6QDL_PAD_SD2_DAT1__SD2_DATA1		0x17059
					MX6QDL_PAD_SD2_DAT2__SD2_DATA2		0x17059
					MX6QDL_PAD_SD2_DAT3__SD2_DATA3		0x17059
					MX6QDL_PAD_NANDF_D2__GPIO2_IO02		0x1b0b0
				>;
			};
		};

		usdhc4 {
			pinctrl_usdhc4: usdhc4grp {
				fsl,pins = <
					MX6QDL_PAD_SD4_CMD__SD4_CMD		0x17059
					MX6QDL_PAD_SD4_CLK__SD4_CLK		0x10059
					MX6QDL_PAD_SD4_DAT0__SD4_DATA0		0x17059
					MX6QDL_PAD_SD4_DAT1__SD4_DATA1		0x17059
					MX6QDL_PAD_SD4_DAT2__SD4_DATA2		0x17059
					MX6QDL_PAD_SD4_DAT3__SD4_DATA3		0x17059
					MX6QDL_PAD_SD4_DAT4__SD4_DATA4		0x17059
					MX6QDL_PAD_SD4_DAT5__SD4_DATA5		0x17059
					MX6QDL_PAD_SD4_DAT6__SD4_DATA6		0x17059
					MX6QDL_PAD_SD4_DAT7__SD4_DATA7		0x17059
					MX6QDL_PAD_NANDF_ALE__SD4_RESET		0x17059
				>;
			};
		};

		flexcan1 {
			pinctrl_flexcan1: can1grp {
				fsl,pins = <
					MX6QDL_PAD_KEY_COL2__FLEXCAN1_TX	0x1b0b0
					MX6QDL_PAD_KEY_ROW2__FLEXCAN1_RX	0x1b0b0
				>;
			};
		};
};

&ldb {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";
		primary;

		display-timings {
			native-mode = <&timing0>;
			timing0: LDB-WXGA {
				clock-frequency = <68930000>;
				hactive = <1280>;
				vactive = <800>;
				hback-porch = <64>;
				hfront-porch = <64>;
				vback-porch = <5>;
				vfront-porch = <5>;
				hsync-len = <40>;
				vsync-len = <6>;
				hsync-active = <0>;
				vsync-active = <0>;
				pixelclk-active = <0>;
			};
		};
	};

	lvds-channel@1 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "disabled";

		display-timings {
			native-mode = <&timing1>;
			timing1: hsd100pxn1 {
				clock-frequency = <65000000>;
				hactive = <1024>;
				vactive = <768>;
				hback-porch = <220>;
				hfront-porch = <40>;
				vback-porch = <21>;
				vfront-porch = <7>;
				hsync-len = <60>;
				vsync-len = <10>;
			};
		};
	};
};

&hdmi_audio {
	status = "okay";
};

&hdmi_core {
	ipu_id = <0>;
	disp_id = <1>;
	status = "okay";
};

&hdmi_video {
	fsl,phy_reg_vlev = <0x0294>;
	fsl,phy_reg_cksymtx = <0x800d>;
	HDMI-supply = <&reg_3v3>;
	status = "okay";
};

&pwm1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm1>;
	status = "okay";
};

&pwm2 {
	status = "okay";
};

&pwm3 {
	status = "okay";
};

&pwm4 {
	status = "okay";
};

&snvs_poweroff {
	status = "okay";
};

&snvs_pwrkey {
	status = "okay";
