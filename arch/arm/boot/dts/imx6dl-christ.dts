/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-christ.dtsi"

/ {
	model = "Christ i.MX6 DualLite CRIX Board";
	compatible = "ces,imx6dl-christ", "fsl,imx6dl";
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu1-di0";
	};

	lvds-channel@1 {
		crtc = "ipu1-di1";
	};
};
